{
  "name": "ember-sortable",
  "version": "2.1.1",
  "description": "Sortable UI primitives for Ember.",
  "keywords": [
    "ember-addon",
    "sortable"
  ],
  "license": "MIT",
  "author": "",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "repository": "https://github.com/adopted-ember-addons/ember-sortable",
  "scripts": {
    "build": "ember build",
    "lint:hbs": "ember-template-lint .",
    "lint:js": "eslint .",
    "start": "ember serve",
    "test": "ember test",
    "test:all": "ember try:each",
    "lint": "yarn lint:hbs && yarn lint:js",
    "release": "release-it"
  },
  "dependencies": {
    "@ember/render-modifiers": "^1.0.2",
    "ember-cli-babel": "^7.11.1",
    "ember-cli-htmlbars": "^3.0.0",
    "ember-decorators-polyfill": "^1.1.1",
    "ember-modifier": "^1.0.2",
    "ember-native-class-polyfill": "^1.0.6",
    "ember-test-selectors": "^2.1.0",
    "ember-test-waiters": "^1.1.1"
  },
  "devDependencies": {
    "@ember/optional-features": "^0.6.3",
    "babel-eslint": "^10.0.3",
    "broccoli-asset-rev": "^2.7.0",
    "ember-a11y-testing": "^1.1.1",
    "ember-cli": "^3.13.1",
    "ember-cli-dependency-checker": "^3.0.0",
    "ember-cli-eslint": "^4.2.3",
    "ember-cli-htmlbars-inline-precompile": "^1.0.3",
    "ember-cli-inject-live-reload": "^1.8.2",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-template-lint": "^1.0.0-beta.1",
    "ember-cli-uglify": "^2.1.0",
    "ember-disable-prototype-extensions": "^1.1.3",
    "ember-export-application-global": "^2.0.0",
    "ember-load-initializers": "^1.1.0",
    "ember-maybe-import-regenerator": "^0.1.6",
    "ember-qunit": "^4.4.1",
    "ember-resolver": "^5.0.1",
    "ember-source": "^3.14.1",
    "ember-source-channel-url": "^1.1.0",
    "ember-try": "^1.0.0",
    "eslint-plugin-ember": "^5.2.0",
    "eslint-plugin-node": "^7.0.1",
    "husky": "^3.0.8",
    "lerna-changelog": "^0.8.2",
    "loader.js": "^4.7.0",
    "qunit-dom": "^0.8.5",
    "release-it": "^12.4.3",
    "release-it-lerna-changelog": "^1.0.3"
  },
  "engines": {
    "node": "6.* || 8.* || >= 10.*"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config",
    "demoURL": "https://adopted-ember-addons.github.io/ember-sortable/demo/"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md"
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    }
  }
}
